
public CurrentLocalDate() {
		// local date
		LocalDate localDate = LocalDate.now();
		System.out.println("Local Date: " + localDate ); 	
}


public ZoneList() {	
		TreeSet<String> sortedZones = new TreeSet<>(ZoneId.getAvailableZoneIds());

		System.out.println("Number of zones: " + sortedZones.size());
//	        System.out.println("");

		System.out.println("\n---[START of LIST]------------\n");
		for (String zone : sortedZones) {
			System.out.println(zone);
		}
		System.out.println("\n---[END of LIST]------------\n");
}


public ZoneIdDate() {
		// other zones
		ZoneId zoneId = ZoneId.of("US/Pacific");
		LocalDate localDateZI = LocalDate.now(zoneId);
		System.out.println("Current Date: " + zoneId + " Local Date: " + localDateZI);
}


public EnterDiffrentDate() {
		System.out.println("\nlocal date of");
		LocalDate localDate = LocalDate.of(2022, 04, 28);
		System.out.print(localDate);
		
		System.out.println("\nlocal date parse");
		LocalDate localDateParse = LocalDate.parse("2022-04-28");
		System.out.print(localDateParse);	
}


public DefaultZoneDate() {
		// default zone
		Clock clock = Clock.systemDefaultZone();
		LocalDate localDateDz = LocalDate.now(clock);
		System.out.println("systemDefaultZone: " + localDateDz);
}
  
  
  
